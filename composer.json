{
    "name": "sammyjo20/saloon-laravel",
    "description": "Laravel package for Sammyjo20/Saloon",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "sammyjo20",
        "saloon",
        "sdk",
        "api",
        "api-integrations"
    ],
    "authors": [
        {
            "name": "Sam Carr√©",
            "email": "29132017+Sammyjo20@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/sammyjo20/saloon-laravel",
    "require": {
        "php": "^8.1",
        "illuminate/console": "^8.0 || ^9.0",
        "illuminate/http": "^8.0 || ^9.0",
        "illuminate/support": "^8.0 || ^9.0",
        "sammyjo20/saloon": "v2.x-dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "orchestra/testbench": "^6.24 || ^7.7",
        "pestphp/pest": "^1.21"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Saloon\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Saloon\\Laravel\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Saloon": "Saloon\\Laravel\\Facades\\Saloon"
            },
            "providers": [
                "Saloon\\Laravel\\SaloonServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],
        "test": [
            "./vendor/bin/pest"
        ]
    }
}
